---
import { Card } from '@eliancodes/brutal-ui';
---

<section id="chatbot" class="w-full flex justify-center my-10">
  <Card class="card-shadow bg-white border-2 border-black max-w-4xl w-full">
    <div class="p-6 space-y-6">
      <h2 class="text-3xl md:text-5xl lg:text-6xl dm-serif text-center">
        Meet KleverAI
      </h2>

      <div id="chatbot-widget" class="flex flex-col gap-4 min-h-[500px]">
        <!-- Output screen -->
        <div
          id="chat-output"
          class="flex-1 overflow-y-auto p-4 bg-white border border-black rounded-xl"
        >
          <p class="text-gray-700 italic">KleverAI is thinking...</p>
        </div>

        <!-- Input field + send button -->
        <form id="chat-form" class="flex gap-2">
          <input
            type="text"
            name="chat-input"
            placeholder="Ask KleverAI anything..."
            class="flex-1 border border-black rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-black"
            disabled
          />
          <button
            type="submit"
            class="px-4 py-2 border border-black rounded-xl bg-black text-white hover:bg-white hover:text-black transition"
            disabled
          >
            Send
          </button>
        </form>
      </div>

      <noscript>
        <p class="p-4 text-red-600">Please enable JavaScript to use the Klever chatbot.</p>
      </noscript>
    </div>
  </Card>
</section>